<%= button_to like_gem_path(gem), method: :post, class: "btn btn-block btn-sm btn-outline-primary", title: "Like #{gem.name}",
  form: { id: dom_id(gem, :like), class: "float-end animate__animated animate__fadeIn ms-1" }, data: { controller: "like", like_gem_value: gem.slug, turbo: true } do %>
  <%= tag.i "", class: "far fa-heart", data: { like_target: "icon" } %>
<% end %>